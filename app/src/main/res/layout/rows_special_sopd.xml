<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="150dp" android:id="@+id/card_ss"
        android:layout_height="150dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/img_category"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <com.absket.in.CustomFonts.MyTextView
                android:id="@+id/tv_categoryname"
                android:layout_width="match_parent" android:background="#88000000"
                android:layout_height="wrap_content" android:text="Some" android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true" android:gravity="center" android:padding="5dp"
                android:layout_alignParentLeft="true" android:textSize="16dp"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>