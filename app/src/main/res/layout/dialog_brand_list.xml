<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <com.absket.in.CustomFonts.MyTextView
                android:textColor="#000000" android:textSize="16dp" android:textStyle="bold"
                android:layout_width="match_parent" android:gravity="center" android:padding="6dp"
                android:layout_height="wrap_content" android:text="Brand List"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="#000000"/>

            <ListView
                android:id="@+id/list_brands"
                android:layout_margin="10dp"
                android:dividerHeight="5dp" android:divider="#00FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>


            <android.support.v7.widget.CardView android:id="@+id/card_search"
                app:cardBackgroundColor="#000000"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.absket.in.CustomFonts.MyTextView
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent" android:padding="6dp" android:textStyle="bold"
                    android:layout_height="wrap_content" android:text="SEARCH"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>