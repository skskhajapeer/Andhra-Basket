<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="wrap_content" android:orientation="vertical">

            <com.absket.in.CustomFonts.MyTextView
                android:textColor="#000000" android:textSize="18dp"
                android:textStyle="bold" android:gravity="center"
                android:layout_width="match_parent" android:padding="5dp"
                android:layout_height="wrap_content" android:text="Customer Deatils"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" android:background="#000000"/>

            <com.absket.in.CustomFonts.MyTextView
                android:text="Username"
                android:textSize="14dp" android:layout_marginLeft="10dp" android:id="@+id/tv_username"
                android:layout_width="match_parent" android:padding="5dp" android:textColor="#000000"
                android:layout_height="wrap_content" />

            <com.absket.in.CustomFonts.MyTextView
                android:text="Mobile Number"
                android:textSize="14dp" android:layout_marginLeft="10dp" android:id="@+id/tv_mobile"
                android:layout_width="match_parent" android:padding="5dp" android:textColor="#000000"
                android:layout_height="wrap_content" />

            <com.absket.in.CustomFonts.MyTextView
                android:textColor="#000000" android:textSize="14dp" android:padding="5dp"
                android:layout_width="match_parent" android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" android:text="Enter your Delivery Address : "/>
            <android.support.v7.widget.CardView
                android:layout_margin="5dp" app:cardBackgroundColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.absket.in.CustomFonts.MyEditText
                android:hint="Delivery Address with PinCode" android:lines="4"
                android:textColor="#000000" android:id="@+id/edt_address"
                android:layout_width="match_parent" android:background="@drawable/noborder" android:gravity="center"
                android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <com.absket.in.CustomFonts.MyTextView
                android:textColor="#000000" android:textSize="18dp"
                android:textStyle="bold" android:gravity="center"
                android:layout_width="match_parent" android:padding="5dp"
                android:layout_height="wrap_content" android:text="Time of Delivery"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" android:background="#000000"/>

            <LinearLayout android:layout_marginLeft="10dp"
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="wrap_content" android:orientation="horizontal">

                <RadioButton android:id="@+id/rbtn_9to12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.absket.in.CustomFonts.MyTextView
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:text="9AM to 12PM"/>

            </LinearLayout>

            <LinearLayout android:layout_marginLeft="10dp"
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="wrap_content" android:orientation="horizontal">

                <RadioButton android:id="@+id/rbtn_2to8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.absket.in.CustomFonts.MyTextView
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:text="2PM to 8PM"/>

            </LinearLayout>







            <com.absket.in.CustomFonts.MyTextView
                android:textColor="#000000" android:textSize="18dp"
                android:textStyle="bold" android:gravity="center"
                android:layout_width="match_parent" android:padding="5dp"
                android:layout_height="wrap_content" android:text="Mode Of Payment"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" android:background="#000000"/>

            <LinearLayout android:layout_marginLeft="10dp"
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="wrap_content" android:orientation="horizontal">

                <RadioButton android:id="@+id/rbtn_cod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.absket.in.CustomFonts.MyTextView
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:text="Cash On Delivery (COD)"/>

            </LinearLayout>

            <LinearLayout android:layout_marginLeft="10dp"
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="wrap_content" android:orientation="horizontal">

                <RadioButton android:id="@+id/rbtn_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.absket.in.CustomFonts.MyTextView
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:text="Online Payment"/>

            </LinearLayout>



            <android.support.v7.widget.CardView android:id="@+id/card_proceed"
                android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                android:layout_width="wrap_content" app:cardBackgroundColor="#000000"
                android:layout_height="wrap_content">
                <com.absket.in.CustomFonts.MyTextView
                    android:paddingTop="10dp" android:paddingBottom="10dp"
                    android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="16dp"
                    android:layout_width="wrap_content" android:paddingLeft="20dp" android:paddingRight="20dp"
                    android:layout_height="wrap_content" android:text="PROCEED"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>