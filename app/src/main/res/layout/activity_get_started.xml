<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/welcome"
    android:weightSum="1">




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:layout_weight="0.3">

    <com.absket.in.CustomFonts.MyTextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a New Account or Sign In"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.absket.in.CustomFonts.MyTextView
            android:id="@+id/btn_started"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:background="@drawable/get_start_selected"
            android:textAllCaps="false"
            android:text="Get Started"
            android:textColor="#fff"
            />

        <com.absket.in.CustomFonts.MyTextView
            android:id="@+id/btn_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/get_started_unselected"
            android:textAllCaps="false"
            android:text="Sign Up"
            android:textColor="@color/toolbarColor"
            />

    </LinearLayout>

    <com.absket.in.CustomFonts.MyTextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />


</LinearLayout>




</RelativeLayout>
