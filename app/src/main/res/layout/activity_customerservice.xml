<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar android:background="@color/toolbarColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/img_back"
                android:layout_width="26dp" android:background="@drawable/leftarrow_white"
                android:layout_height="26dp" />
            <com.absket.in.CustomFonts.MyTextView
                android:textSize="16dp"
                android:layout_gravity="center" android:layout_marginLeft="10dp"
                android:layout_width="match_parent" android:textColor="#FFFFFF" android:textStyle="bold"
                android:layout_height="wrap_content" android:text="Customer Service"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="match_parent" android:orientation="vertical">

        <com.absket.in.CustomFonts.MyTextView
            android:layout_width="match_parent" android:gravity="center" android:textColor="#000000"
            android:layout_height="wrap_content" android:text="To Order Something Call Below Number"/>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp" app:cardBackgroundColor="@color/buttonColor"
        android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
        android:layout_marginTop="15dp" android:id="@+id/card_service1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.absket.in.CustomFonts.MyTextView
            android:padding="10dp"
            android:layout_width="match_parent" android:gravity="center" android:id="@+id/tv_service1"
            android:textColor="#FFFFFF" android:textSize="16dp" android:textStyle="bold"
            android:layout_height="wrap_content" android:text="Something Wrong"/>
    </android.support.v7.widget.CardView>


        <com.absket.in.CustomFonts.MyTextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent" android:gravity="center" android:textColor="#000000"
            android:layout_height="wrap_content" android:text="To Cancel an Order Call Below Number"/>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp" app:cardBackgroundColor="@color/buttonColor"
            android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
            android:layout_marginTop="15dp" android:id="@+id/card_service2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.absket.in.CustomFonts.MyTextView
                android:padding="10dp"
                android:layout_width="match_parent" android:gravity="center" android:id="@+id/tv_service2"
                android:textColor="#FFFFFF" android:textSize="16dp" android:textStyle="bold"
                android:layout_height="wrap_content" android:text="Something Wrong"/>
        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView android:visibility="gone"
        android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
        android:layout_marginTop="15dp" app:cardBackgroundColor="@color/buttonColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.absket.in.CustomFonts.MyTextView
            android:padding="10dp"
            android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="16dp"
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="wrap_content" android:text="Service 2"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView android:visibility="gone"
        app:cardBackgroundColor="@color/buttonColor"
        android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.absket.in.CustomFonts.MyTextView
            android:padding="10dp"
            android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="16dp"
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="wrap_content" android:text="Service 3"/>
    </android.support.v7.widget.CardView>



    <LinearLayout android:layout_marginTop="20dp"
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content" android:gravity="center">
        <android.support.v7.widget.CardView app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#43A047"  android:id="@+id/card_call"
            android:layout_width="100dp" android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="wrap_content" android:orientation="vertical">
                <ImageView android:layout_margin="2dp"
                    android:layout_width="30dp" android:background="@drawable/callus"
                    android:layout_height="30dp" />
                <com.absket.in.CustomFonts.MyTextView
                    android:padding="3dp"
                    android:layout_width="match_parent" android:gravity="center"
                    android:textColor="#FFFFFF" android:textSize="16dp" android:textStyle="bold"
                    android:layout_height="wrap_content" android:text="Call Us"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#43A047"
            android:layout_width="100dp" android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="wrap_content" android:orientation="vertical">
                <ImageView android:background="@drawable/helpus"
                    android:layout_width="30dp" android:layout_margin="2dp"
                    android:layout_height="30dp" />
                <com.absket.in.CustomFonts.MyTextView
                    android:padding="3dp"
                    android:textColor="#FFFFFF" android:textSize="16dp" android:textStyle="bold"
                    android:layout_width="match_parent" android:gravity="center"
                    android:layout_height="wrap_content" android:text="Help"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>



</LinearLayout>